/**app.wxss - 微信小程序样式**/

/* 基础容器样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #F5F5DC;
}

/* 基础颜色定义 - 直接使用具体值 */
.btn-primary {
  background-color: #8B4513;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-secondary {
  background-color: #D2691E;
  color: white;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border: none;
}

.btn-accent {
  background-color: #07C160;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-primary {
  color: #8B4513;
}

.text-secondary {
  color: #D2691E;
}

.text-accent {
  color: #07C160;
}

/* 棋盘相关样式 */
.chessboard-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background: #F5F5DC;
}

.chess-piece {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
}

.chess-piece.black {
  background: #000000;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.chess-piece.white {
  background: #FFFFFF;
  box-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid #CCCCCC;
}

/* 游戏状态栏样式 */
.game-status {
  background: white;
  padding: 20rpx;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.current-player {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B4513;
}

.game-timer {
  font-size: 28rpx;
  color: #333333;
  margin: 10rpx 0;
}

/* 控制按钮样式 */
.game-controls {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
}

.control-btn {
  background: #8B4513;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 25rpx;
  font-size: 24rpx;
  min-width: 120rpx;
}

.control-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 简单动画 - 微信小程序兼容 */
.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.bounce-in {
  animation: bounceIn 0.5s ease-out;
}

@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(0.3);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* 响应式设计 - 简化版 */
.small-screen .container {
  padding: 100rpx 0;
}

.small-screen .btn-primary {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

.small-screen .card {
  padding: 20rpx;
  margin: 15rpx;
}