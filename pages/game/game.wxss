/* 游戏页面样式 */
.game-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
}

/* 游戏状态栏 */
.game-status-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
}

.player-info {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.player-info.active {
  background: rgba(76, 175, 80, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.player-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.black-stone {
  background: radial-gradient(circle at 30% 30%, #555, #000);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.white-stone {
  background: radial-gradient(circle at 30% 30%, #fff, #ddd);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.player-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.player-time {
  font-size: 24rpx;
  color: #666;
  font-family: monospace;
}

.game-info {
  text-align: center;
}

.move-count {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.game-mode {
  display: block;
  font-size: 20rpx;
  color: #999;
}

/* 棋盘区域 */
.board-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 20rpx;
}

/* AI思考指示器 */
.thinking-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
  padding: 30rpx 40rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  z-index: 100;
}

.thinking-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
}

.thinking-text {
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 游戏结果弹窗 */
.result-modal {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.result-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  max-width: 80%;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
}

.result-icon.win {
  background: linear-gradient(135deg, #4CAF50, #45a049);
}

.result-icon.lose {
  background: linear-gradient(135deg, #f44336, #d32f2f);
}

.result-emoji {
  font-size: 60rpx;
}

.result-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.result-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.result-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.btn-restart, .btn-back {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-restart {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
}

.btn-back {
  background: #f5f5f5;
  color: #666;
}

.btn-restart:active, .btn-back:active {
  transform: translateY(-2rpx);
}

/* 游戏控制栏 */
.game-control-bar {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 20rpx 0;
}

.control-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  transition: background-color 0.2s;
}

.control-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.control-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  color: #666;
}

.control-text {
  font-size: 24rpx;
  color: #666;
}

/* 弹出菜单 */
.popup-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 300;
}

.menu-content {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  width: 100%;
  max-width: 600rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

/* 暂停遮罩 */
.pause-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 400;
}

.pause-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  max-width: 80%;
}

.pause-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.pause-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.btn-continue {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4CAF50, #45a049);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .game-status-bar {
    padding: 16rpx 20rpx;
  }
  
  .player-info {
    padding: 12rpx 16rpx;
  }
  
  .player-name {
    font-size: 24rpx;
  }
  
  .player-time {
    font-size: 20rpx;
  }
  
  .control-icon {
    font-size: 36rpx;
  }
  
  .control-text {
    font-size: 20rpx;
  }
}

@media (min-width: 768px) {
  .game-container {
    max-width: 750px;
    margin: 0 auto;
  }
}