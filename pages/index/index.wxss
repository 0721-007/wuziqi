/** 首页样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f5dc 0%, #e8e4d9 100%);
  padding-bottom: 40rpx;
}

/* 顶部导航栏 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  background: linear-gradient(135deg, #8b4513 0%, #a0522d 100%);
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 69, 19, 0.3);
}

.navbar-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.settings-btn {
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.settings-icon {
  font-size: 40rpx;
  color: white;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  margin: 30rpx;
  padding: 40rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  overflow: hidden;
  border: 6rpx solid #8b4513;
  box-shadow: 0 4rpx 16rpx rgba(139, 69, 19, 0.3);
}

.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.user-stats {
  display: flex;
  gap: 30rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #666666;
  background: #f8f8f8;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 游戏模式选择 */
.game-modes {
  margin: 30rpx;
}

.mode-card {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 40rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.mode-card:active {
  transform: scale(0.98);
}

.mode-card:last-child {
  margin-bottom: 0;
}

.mode-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  font-size: 50rpx;
}

.ai-mode .mode-icon {
  background: linear-gradient(135deg, #4caf50, #66bb6a);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.multiplayer-mode .mode-icon {
  background: linear-gradient(135deg, #2196f3, #42a5f5);
  box-shadow: 0 4rpx 16rpx rgba(33, 150, 243, 0.3);
}

.quick-mode .mode-icon {
  background: linear-gradient(135deg, #ff9800, #ffa726);
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
}

.mode-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.mode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.mode-status {
  font-size: 22rpx;
  color: #999999;
}

.mode-difficulty {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 8rpx;
}

.difficulty-label {
  font-size: 22rpx;
  color: #666666;
}

.difficulty-text {
  font-size: 22rpx;
  color: #8b4513;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.mode-arrow {
  font-size: 40rpx;
  color: #cccccc;
  margin-left: 20rpx;
}

/* 快速操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  margin: 30rpx;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: white;
  border: none;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #666666;
}

.rank-btn .btn-icon {
  color: #ffd700;
}

.history-btn .btn-icon {
  color: #8b4513;
}

.tutorial-btn .btn-icon {
  color: #4caf50;
}

/* 最近对局 */
.recent-games {
  margin: 30rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.section-more {
  font-size: 24rpx;
  color: #8b4513;
}

.game-list {
  padding: 0 30rpx;
}

.game-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s ease;
}

.game-item:active {
  background: #f8f8f8;
}

.game-item:last-child {
  border-bottom: none;
}

.game-result {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.game-result.win {
  background: #e8f5e8;
  color: #4caf50;
}

.game-result.lose {
  background: #ffebee;
  color: #f44336;
}

.game-result.draw {
  background: #fff3e0;
  color: #ff9800;
}

.game-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.game-opponent {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.game-date {
  font-size: 24rpx;
  color: #999999;
}

.game-duration {
  font-size: 24rpx;
  color: #666666;
}

/* 成就展示 */
.achievements {
  margin: 30rpx;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.achievement-list {
  padding: 0 30rpx;
}

.achievement-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.achievement-item:last-child {
  border-bottom: none;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  font-size: 40rpx;
}

.achievement-icon.common {
  background: linear-gradient(135deg, #e0e0e0, #bdbdbd);
  box-shadow: 0 4rpx 16rpx rgba(189, 189, 189, 0.3);
}

.achievement-icon.rare {
  background: linear-gradient(135deg, #81c784, #4caf50);
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
}

.achievement-icon.epic {
  background: linear-gradient(135deg, #ba68c8, #9c27b0);
  box-shadow: 0 4rpx 16rpx rgba(156, 39, 176, 0.3);
}

.achievement-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666666;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .user-card {
    padding: 30rpx;
    margin: 20rpx;
  }
  
  .user-avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .user-name {
    font-size: 32rpx;
  }
  
  .mode-card {
    padding: 30rpx;
    margin-bottom: 20rpx;
  }
  
  .mode-icon {
    width: 80rpx;
    height: 80rpx;
    font-size: 40rpx;
  }
  
  .mode-title {
    font-size: 28rpx;
  }
  
  .action-btn {
    padding: 20rpx 15rpx;
  }
  
  .btn-icon {
    font-size: 40rpx;
  }
}

@media (min-width: 768px) {
  .container {
    max-width: 750rpx;
    margin: 0 auto;
  }
  
  .user-card {
    padding: 50rpx;
  }
  
  .user-avatar {
    width: 140rpx;
    height: 140rpx;
  }
  
  .user-name {
    font-size: 40rpx;
  }
  
  .mode-card {
    padding: 50rpx;
  }
  
  .mode-icon {
    width: 120rpx;
    height: 120rpx;
    font-size: 60rpx;
  }
  
  .mode-title {
    font-size: 36rpx;
  }
}