/** 棋盘组件样式 - 微信小程序兼容版 **/

.chessboard-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background: #F5F5DC;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.board-background {
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: inset 0 0 20rpx rgba(0, 0, 0, 0.1);
}

.chessboard-canvas {
  display: block;
  background: transparent;
}

.chess-pieces-layer {
  position: absolute;
  top: 0;
  left: 0;
  pointer-events: none;
}

.chess-piece {
  position: absolute;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 8rpx rgba(0, 0, 0, 0.3);
  pointer-events: auto;
  transition: transform 0.2s ease;
}

.chess-piece.black {
  background: #000000;
  border: 1rpx solid #333333;
}

.chess-piece.white {
  background: #FFFFFF;
  border: 1rpx solid #CCCCCC;
}

.chess-piece:active {
  transform: scale(0.95);
}

.piece-highlight {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 120%;
  height: 120%;
  border-radius: 50%;
  background: rgba(255, 255, 0, 0.3);
  transform: translate(-50%, -50%);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.7;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.3;
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.7;
  }
}

.current-move-indicator {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: rgba(255, 0, 0, 0.8);
  transform: translate(-50%, -50%);
}

.move-indicator-pulse {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 0, 0, 0.4);
  animation: movePulse 1.5s infinite;
}

@keyframes movePulse {
  0% {
    transform: scale(1);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.4;
  }
  100% {
    transform: scale(1);
    opacity: 0.8;
  }
}

.winning-line-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.winning-line {
  position: absolute;
  background: rgba(255, 215, 0, 0.8);
  height: 8rpx;
  border-radius: 4rpx;
  transform-origin: left center;
  box-shadow: 0 0 10rpx rgba(255, 215, 0, 0.6);
  animation: winningGlow 1s infinite alternate;
}

@keyframes winningGlow {
  from {
    box-shadow: 0 0 10rpx rgba(255, 215, 0, 0.6);
  }
  to {
    box-shadow: 0 0 20rpx rgba(255, 215, 0, 1);
  }
}

.coordinate-labels {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.coordinate-row {
  position: absolute;
  top: -40rpx;
  left: 0;
  width: 100%;
  height: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.coordinate-col {
  position: absolute;
  top: 0;
  left: -40rpx;
  width: 40rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.coordinate-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: bold;
}

.top-coordinates .coordinate-label {
  color: #333333;
}

.left-coordinates .coordinate-label {
  color: #333333;
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .chessboard-container {
    padding: 10rpx;
  }
  
  .coordinate-label {
    font-size: 20rpx;
  }
  
  .coordinate-row {
    top: -30rpx;
    height: 30rpx;
  }
  
  .coordinate-col {
    left: -30rpx;
    width: 30rpx;
  }
}

/* 触摸反馈 */
.touch-feedback {
  transition: all 0.1s ease;
}

.touch-feedback:active {
  transform: scale(0.98);
  opacity: 0.8;
}