/** 游戏状态栏组件样式 */

.game-status-container {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.current-player-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f5f5, #e8e8e8);
  border-radius: 12rpx;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  border: 4rpx solid var(--primary-color, #8B4513);
}

.avatar-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.player-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.player-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.player-status {
  font-size: 24rpx;
  color: #666666;
}

.game-info-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--primary-color, #8B4513);
}

.game-controls {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.control-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.control-btn:active {
  transform: scale(0.95);
}

.control-btn:disabled {
  opacity: 0.5;
  background: #f5f5f5;
}

.btn-hover {
  background: #f8f8f8;
  border-color: var(--primary-color, #8B4513);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  color: var(--primary-color, #8B4513);
}

.btn-text {
  font-size: 24rpx;
  color: #666666;
}

.status-message {
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  animation: slideIn 0.3s ease-out;
}

.status-message.info {
  background: #e3f2fd;
  border: 2rpx solid #2196f3;
}

.status-message.success {
  background: #e8f5e8;
  border: 2rpx solid #4caf50;
}

.status-message.warning {
  background: #fff3e0;
  border: 2rpx solid #ff9800;
}

.status-message.error {
  background: #ffebee;
  border: 2rpx solid #f44336;
}

.status-text {
  font-size: 28rpx;
  flex: 1;
}

.status-message.info .status-text {
  color: #1976d2;
}

.status-message.success .status-text {
  color: #388e3c;
}

.status-message.warning .status-text {
  color: #f57c00;
}

.status-message.error .status-text {
  color: #d32f2f;
}

.status-action-btn {
  padding: 10rpx 20rpx;
  background: var(--primary-color, #8B4513);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}

.status-action-btn:active {
  opacity: 0.8;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式设计 */
@media (max-width: 375px) {
  .game-status-container {
    padding: 20rpx;
    margin: 15rpx;
  }
  
  .current-player-section {
    padding: 15rpx;
    margin-bottom: 20rpx;
  }
  
  .player-avatar {
    width: 60rpx;
    height: 60rpx;
    margin-right: 15rpx;
  }
  
  .player-name {
    font-size: 28rpx;
  }
  
  .player-status {
    font-size: 22rpx;
  }
  
  .control-btn {
    padding: 15rpx 8rpx;
  }
  
  .btn-icon {
    font-size: 28rpx;
  }
  
  .btn-text {
    font-size: 22rpx;
  }
}

@media (min-width: 768px) {
  .game-status-container {
    padding: 40rpx;
    margin: 30rpx;
  }
  
  .current-player-section {
    padding: 30rpx;
    margin-bottom: 40rpx;
  }
  
  .player-avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 30rpx;
  }
  
  .player-name {
    font-size: 36rpx;
  }
  
  .player-status {
    font-size: 28rpx;
  }
  
  .control-btn {
    padding: 25rpx 15rpx;
  }
  
  .btn-icon {
    font-size: 36rpx;
  }
  
  .btn-text {
    font-size: 28rpx;
  }
}